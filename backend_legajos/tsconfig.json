{
  "compilerOptions": {
    /* Output */
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",

    /* Quality */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    /* Node */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node", "jest"],

    /* Improve build speed */
    "incremental": false,
    "noEmitOnError": true,

    /* Cleaner build */
    "forceConsistentCasingInFileNames": true
  },

  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "__tests__"]
}
